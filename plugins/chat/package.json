{
  "name": "mioku-plugin-chat",
  "version": "1.0.0",
  "description": "AI 智能聊天插件",
  "main": "index.ts",
  "mioku": {
    "services": [
      "ai",
      "config",
      "help"
    ],
    "skill": {
      "name": "chat",
      "description": "AI 智能聊天功能"
    },
    "commands": [
      "/重置会话",
      "/重置群会话"
    ],
    "help": {
      "title": "AI 聊天",
      "description": "智能 AI 聊天插件",
      "commands": [
        {
          "cmd": "/重置会话",
          "desc": "重置自己的AI聊天记录"
        },
        {
          "cmd": "/重置群会话",
          "desc": "[管理] 重置当前群的AI聊天记录"
        }
      ]
    }
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "openai": "^4.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.0.0"
  }
}
